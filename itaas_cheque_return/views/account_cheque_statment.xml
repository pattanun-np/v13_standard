<openerp>
    <data>
        <record model="ir.ui.view" id="account_cheque_statement_form">
            <field name="name">account.cheque.statement.Button</field>
            <field name="model">account.cheque.statement</field>
            <field name="inherit_id" ref="thai_accounting.view_account_cheque_statement_receive_form"/>
            <field name="arch" type="xml">
                <button  name="action_set_draft" position="after">
                    <button name="action_set_confirm_return" string="Cheque Return" states="open" type="object" class="btn-primary"/>
                    <button name="action_return" string="Cheque Return" states="confirm" type="object" class="btn-primary"/>
                    <button name="set_to_draft" string="Set To Draft" states="return" type="object" class="btn-primary"/>
                </button>


            </field>
        </record>

        <record model="ir.ui.view" id="account_cheque_statement_form_payment_button">
            <field name="name">account.cheque.statement.payment</field>
            <field name="model">account.cheque.statement</field>
            <field name="inherit_id" ref="thai_accounting.view_account_cheque_statement_payment_form"/>
            <field name="arch" type="xml">
                <button  name="action_set_draft" position="after">
                    <button name="action_set_confirm_return" string="Cheque Return" states="open" type="object" class="btn-primary"/>
                    <button name="action_return" string="Cheque Return" states="confirm" type="object" class="btn-primary"/>
                    <button name="set_to_draft" string="Set To Draft" states="return" type="object" class="btn-primary"/>
                </button>


            </field>
        </record>

    </data>
</openerp>
